<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans   
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean id="AdrsBean" class="com.spring.constructorDI.Address">
<constructor-arg value="bbsr"></constructor-arg>
<constructor-arg value="Odisha"></constructor-arg>
<constructor-arg value="India"></constructor-arg>
</bean>

<bean id="prsnBean" class="com.spring.constructorDIInherit.Person">
<constructor-arg value="Priyab"></constructor-arg>
</bean>

<bean id="prsnBeanInheriting" class="com.spring.constructorDIInherit.Person" parent="prsnBean">
<constructor-arg ref="AdrsBean"></constructor-arg>
</bean>
</beans>